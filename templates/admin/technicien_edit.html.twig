{% extends 'base.html.twig' %}

{% block title %}Modifier Technicien{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f0f4f8; /* Light blue-gray background */
    }
</style>
{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-center text-2xl font-bold mb-6">Modifier Technicien</h1>

        <div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                {{ form_start(form) }}
<div class="mb-4">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.cin, {'attr': {'class': 'w-full p-2 border rounded', 'placeholder': 'Enter CIN (8 digits)'}}) }}
                    {{ form_errors(form.cin) }}
                </div>

                 <div class="mb-4">
                    {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'w-full p-2 border rounded', 'placeholder': 'Enter phone number (8 digits)'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.username, 'Matricule', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                    <small class="block text-gray-600">Le mot de passe doit contenir au moins 8 caractères, une lettre majuscule et un chiffre.</small>
                    {{ form_errors(form.password) }}
                </div>

                <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                    Enregistrer
                </button>

                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('admin_technicien_index') }}" class="block mt-4 text-center text-blue-500 hover:text-blue-700">
            Retour à la liste
        </a>
    </div>
{% endblock %}
