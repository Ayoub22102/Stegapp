{% extends 'base.html.twig' %}

{% block title %}Liste des Techniciens{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f0f4f8; /* Light blue-gray background */
    }
    .search-bar {
        width: 100%;
        padding: 10px;
        background-color: #f0f4f8; /* Match the background of the page */
        border-bottom: 1px solid #e2e8f0; /* Light border to separate search from table */
    }
    .search-input {
        width: 80%; /* Adjust width to align with table */
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #d1d5db; /* Light border color */
    }
    .search-button {
        padding: 8px 16px;
        background-color: #4299e1; /* Blue background */
        color: white;
        border-radius: 4px;
        border: none;
        margin-left: 10px;
        cursor: pointer;
    }
    .search-button:hover {
        background-color: #3182ce; /* Darker blue on hover */
    }
</style>
{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-center text-2xl font-bold mb-6">Liste des Techniciens</h1>

        <!-- Display Flash Messages -->
        {% for label, messages in app.flashes %}
            <div class="container mx-auto mt-4">
                <div class="bg-{{ label == 'success' ? 'green' : (label == 'error' ? 'red' : 'yellow') }}-100 border-l-4 border-{{ label == 'success' ? 'green' : (label == 'error' ? 'red' : 'yellow') }}-500 text-{{ label == 'success' ? 'green' : (label == 'error' ? 'red' : 'yellow') }}-700 p-4 rounded-md">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}

        <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="search-bar flex items-center justify-between">
                {{ form_start(search_form, { 'method': 'GET', 'attr': {'class': 'flex w-full'}}) }}
                    {{ form_widget(search_form.search, {'attr': {'class': 'search-input', 'placeholder': 'Rechercher...'}}) }}
                    <button class="search-button">Rechercher</button>
                {{ form_end(search_form) }}
            </div>

            <table class="min-w-full leading-normal mt-0">
                <thead>
                    <tr>
                        <th class="px-5 py-3 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase">Nom</th>
                        <th class="px-5 py-3 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase">Prénom</th>
                        <th class="px-5 py-3 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase">CIN</th>
                        <th class="px-5 py-3 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase">Téléphone</th>
                        <th class="px-5 py-3 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for technicien in techniciens %}
                        <tr>
                            <td class="px-5 py-3">{{ technicien.nom }}</td>
                            <td class="px-5 py-3">{{ technicien.prenom }}</td>
                            <td class="px-5 py-3">{{ technicien.cin }}</td>
                            <td class="px-5 py-3">{{ technicien.telephone }}</td>
                            <td class="px-5 py-3 flex items-center space-x-2">
                                <a href="{{ path('admin_technicien_edit', {'id': technicien.id}) }}" class="bg-yellow-500 text-white py-1 px-2 rounded hover:bg-yellow-700">Modifier</a>
                                <form action="{{ path('admin_technicien_delete', {'id': technicien.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce technicien ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ technicien.id) }}">
                                    <button class="bg-red-500 text-white py-1 px-2 rounded hover:bg-red-700">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4">Aucun technicien trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('admin_technicien_new') }}" class="block mt-4 text-center text-blue-500 hover:text-blue-700">Ajouter un Technicien</a>
    </div>
{% endblock %}
