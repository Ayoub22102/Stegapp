{% extends 'base.html.twig' %}

{% block title %}Modifier Chef d'Équipe{% endblock %}

{% block body %}
<section class="bg-sky-900 min-h-screen flex justify-center items-center">
    <div class="py-10 px-6 mx-auto max-w-screen-2xl lg:py-20 flex justify-center">

        <!-- Formulaire de modification de chef d'équipe avec une taille augmentée de 20% -->
        <div class="w-full lg:max-w-2xl p-8 space-y-10 sm:p-10 bg-sky-200 dark:bg-slate-950 rounded-lg shadow-xl">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center">Modifier le Chef d'Équipe</h2>
            
            <!-- Démarrer le formulaire -->
            {{ form_start(form, {'attr': {'class': 'mt-8 space-y-6'}}) }}

            <!-- Champ Nom -->
            <div class="relative">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.nom, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'Entrez le nom'
                }}) }}
            </div>

            <!-- Champ Prénom -->
            <div class="relative">
                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.prenom, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'Entrez le prénom'
                }}) }}
            </div>

            <!-- Champ CIN -->
            <div class="relative">
                {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.cin, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'CIN (8 chiffres)'
                }}) }}
            </div>

            <!-- Champ Téléphone -->
            <div class="relative">
                {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.telephone, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'Téléphone (8 chiffres)'
                }}) }}
            </div>

            <!-- Champ Matricule -->
            <div class="relative">
                {{ form_label(form.username, 'Matricule', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.username, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'Entrez le matricule'
                }}) }}
            </div>

            <!-- Champ Mot de passe -->
            <div class="relative">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block mb-2 text-lg font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.password, {'attr': {
                    'class': 'bg-sky-100 border border-black text-black dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3',
                    'placeholder': 'Entrez le mot de passe'
                }}) }}
            </div>

            <!-- Bouton Mettre à jour -->
            <button type="submit" class="w-full px-6 py-4 text-lg font-medium text-center text-white bg-sky-900 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">Mettre à jour</button>

            <!-- Terminer le formulaire -->
            {{ form_end(form) }}

            <!-- Lien pour retourner à la liste -->
            <div class="mt-4 text-center">
                <a href="{{ path('admin_chefequipe_index') }}" class="block text-center bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600 mb-4">
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
