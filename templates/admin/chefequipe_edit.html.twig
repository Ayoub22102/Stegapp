{% extends 'base.html.twig' %}

{% block title %}Modifier Chef d'Équipe{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f0f4f8;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container mx-auto my-8 p-6 bg-white shadow-md rounded-lg max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Modifier Chef d'Équipe</h1>

        {# Form Errors #}
        {% if form.vars.errors|length > 0 %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded">
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div>
            {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.prenom) }}
        </div>

        <div>
            {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.cin, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md', 'placeholder': 'CIN (8 digits)'}}) }}
            {{ form_errors(form.cin) }}
        </div>

        <div>
            {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.telephone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md', 'placeholder': 'Téléphone (8 chiffres)'}}) }}
            {{ form_errors(form.telephone) }}
        </div>

        <div>
            {{ form_label(form.username, 'Matricule', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div>
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md">
            Enregistrer
        </button>

        {{ form_end(form) }}

        <a href="{{ path('admin_chefequipe_index') }}" class="block text-center mt-4 text-blue-500 hover:text-blue-600">
            Retour à la liste
        </a>
    </div>
{% endblock %}
