{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto my-8 p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-6">Votre Planning</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Soumission</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adresse</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reclamation in reclamations %}
                        <tr class="border-t border-gray-200">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ reclamation.type }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ reclamation.description }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ reclamation.dateSoumission|date('Y-m-d') }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ reclamation.adresse }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="{{ path('technicien_traiter_intervention', {id: reclamation.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow">
                                    Traiter Intervention
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-sm text-gray-500">Aucune réclamation assignée.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
