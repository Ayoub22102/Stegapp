
{% extends 'base.html.twig' %}

{% block title %}Interventions Terminées{% endblock %}

{% block body %}
    <h1>Interventions Terminées</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Analyse</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for intervention in interventions %}
                <tr>
                    <td>{{ intervention.id }}</td>
                    <td>{{ intervention.analyse }}</td>
                    <td>{{ intervention.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('cloture_cloturer', {id: intervention.id}) }}">Clôturer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
